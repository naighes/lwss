{
    "Type": "AWS::DynamoDB::Table",
    "Properties": {
        "TableName": "${self:provider.environment.ORDER_TABLE_NAME}",
        "AttributeDefinitions": [{
            "AttributeName": "order_id",
            "AttributeType": "S"
        }],
        "KeySchema": [
            {
                "AttributeName": "order_id",
                "KeyType": "HASH"
            }
        ],
        "ProvisionedThroughput": {
            "ReadCapacityUnits": 5,
            "WriteCapacityUnits": 5
        },
        "StreamSpecification": {
            "StreamViewType": "NEW_IMAGE"
        }
    }
}

